{
  "extends": "@tsconfig/node22",
  "compilerOptions": {
    "allowJs": false,
    "emitDeclarationOnly": false,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "eslint.config.ts",
    "copy-dts.js"
  ]
}
